<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WiWeWa.View.ProgressView">
    <ContentView.Content>
        <Grid ColumnSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="14*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>

            <Label BackgroundColor="Green" VerticalOptions="Fill" HorizontalOptions="Fill" Grid.Column="0"/>
            <Label BackgroundColor="Yellow" VerticalOptions="Fill" HorizontalOptions="Fill" Grid.Column="1"/>
            <Label BackgroundColor="Red" VerticalOptions="Fill" HorizontalOptions="Fill" Grid.Column="2"/>
            <Label BackgroundColor="White" VerticalOptions="Fill" HorizontalOptions="Fill" Grid.Column="3"/>
        </Grid>
    </ContentView.Content>
</ContentView>