<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BindingContext="{Binding TrialPage, Source={StaticResource ViewModelLocator}}"
             x:Class="WiWeWa.View.TrialPage"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Label Text="WiSo Weshalb Warum?" TextColor="White" FontSize="Large" FontAttributes="Bold" AbsoluteLayout.LayoutBounds=".5,.2,-1,-1" AbsoluteLayout.LayoutFlags="PositionProportional"/>

            <Image Source="icon_high_res.png" AbsoluteLayout.LayoutBounds=".5,.5,175,175" AbsoluteLayout.LayoutFlags="PositionProportional"/>
   
            <ActivityIndicator IsRunning="True" Color="White" AbsoluteLayout.LayoutBounds=".5,.8,1,-1" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>